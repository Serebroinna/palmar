<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include('./partials/links')%>
    <title>Baratillo</title>
</head>
<body>
    <%-include('./partials/navegacion')%>
    <section>
        <img src="/img/banner.jpg" alt="" id="img-banner">    
    </section>
    <section id="section-cards">
        <div class="container" id="container-body-cards">
            <% registros.forEach((producto) => { %>
                <div class="card">
                    <img src="/img/<%= producto.img %>" alt="">
                    <div class="container" id="card-body">
                        <h4><%= producto.name %></h4>
                        <p><%= producto.descripton %></p>
                        <h3>$ <%= producto.price %> MX</h3>
                    </div>
                    <div class="container" id="container-btn-add-carrito">
                        <button class="btn" type="submit" id="btn-add-carrito">Añadir</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </section> 
    <section id="section-contact">
        <div class="container vh-100 d-flex justify-content-center align-items-center">
            <div class="card" id="card-contact">
                <div class="card-header">
                    <h3>¡Escribenos!</h3>
                </div>
                <div class="card-body text-start">
                    <form action="">
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="message">Mensaje</label>
                            <textarea name="message"rows="3" class="form-control"></textarea>
                        </div>
                        <div class="container d-flex justify-content-center align-items-center">
                            <button class="btn" id="btn-add-carrito">Enviar</button>
                        </div>                   
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section id="section-login">
        <div class="container vh-100 d-flex justify-content-center align-items-center">
            <div class="card" id="card-contact">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body text-start">
                    <form action="">
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="message">Contraseña</label>
                            <input type="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="container d-flex justify-content-center align-items-center">
                            <button class="btn" id="btn-add-carrito">Entrar</button>
                        </div>                   
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
<%-include('./partials/footer')%>
</html> 