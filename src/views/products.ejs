<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%-include('./partials/links')%>
    <title>Products</title>
    <style type="text/css">
        #map {
        width: 50%;
        height: 100%;
        }
        body {
            height: 70%;
            margin: 0;
            padding: 0;
            }
    </style>
</head>
<body>
    <%-include('./partials/navegacion')%>
    <div class="container" id="container-body">
        <h1>Stock</h1>
        <div class="row mt-4">
            <div class="col-md-5">
                <form action="/products" method="post">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre" class="form-control">
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
                    </div>
                    <div class="form-group mt-3">
                        <input type="number" name="price" placeholder="Precio" class="form-control">
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" name="img" placeholder=".jpg" class="form-control">
                    </div>
                    <button type="submit" class="btn mt-3" id="btn-agregar">Agregar</button>
                </form>
            </div>
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead id="head-table">
                        <tr>
                            <td>ID</td>
                            <td>NOMBRE</td>
                            <td>DESCRIPCION</td>
                            <td>PRECIO</td>
                            <td>ACCION</td>
                        </tr>
                    </thead>
                    <tbody id="body-table">
                        <% registros.forEach((producto) => { %>
                        <tr>
                            <td><%= producto.id %></td>
                            <td><%= producto.name %></td>
                            <td><%= producto.descripton %></td>
                            <td><%= producto.price %></td>
                            <td style="display: flex; text-align: center;">
                                <form method="post" action="/products/<%=producto.id%> ?_method=DELETE" style="margin-left: 15%;">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                </form>
                                <form method="post" action="" style="margin-left: 10%;">
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-pen"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>